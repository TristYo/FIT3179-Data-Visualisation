{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/TristYo/FIT3179-Data-Visualisation/master/owid-co2-data.csv"
  },
  "width": 600,
  "height": 500,
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "scale": {"domainMin": {"year": 1900}}
    }
  },
  "transform": [
    {
      "filter": {
        "and": [
          "datum.country == 'Africa'||datum.country=='Asia'||datum.country=='South America'||datum.country=='Europe'||datum.country=='Oceania'||datum.country=='North America'"
        ]
      }
    }
  ],
  "layer": [
    {
      "encoding": {
        "color": {"field": "country", "type": "nominal", "title": "Continent"},
        "y": {
          "field": "co2",
          "type": "quantitative",
          "scale": {"domainMin": 0}
        },
        "opacity": {
          "condition": {"selection": "continent_Selection", "value": 0.69},
          "value": 0.2
        }
      },
      "layer": [
        {
          "selection": {
            "continent_Selection": {
              "type": "multi",
              "fields": ["country"],
              "bind": "legend"
            }
          },
          "mark": {"type": "area", "clip": true}
        },
        {
          "transform": [{"filter": {"selection": "hover"}}],
          "mark": {
            "type": "area",
            "point": {"color": "black", "size": 100, "opacity": 1},
            "clip": true
          }
        }
      ]
    },
    {
      "transform": [{"pivot": "country", "value": "co2", "groupby": ["year"]}],
      "mark": {"type": "rule", "clip": true},
      "encoding": {
        "opacity": {
          "condition": {"value": 1, "selection": "hover"},
          "value": 0
        },
        "tooltip": [
          {
            "field": "year",
            "type": "temporal",
            "timeUnit": "year",
            "title": "Year"
          },
          {"field": "Africa", "type": "quantitative"},
          {"field": "Asia", "type": "quantitative"},
          {"field": "Europe", "type": "quantitative"},
          {"field": "North America", "type": "quantitative"},
          {"field": "Oceania", "type": "quantitative"},
          {"field": "South America", "type": "quantitative"}
        ]
      },
      "selection": {
        "hover": {
          "type": "single",
          "fields": ["year"],
          "nearest": true,
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }
      }
    }
  ],
  "config": {}
}